/* 数量操作 */

.number {
  height: 98rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.number .number-text {
  width: 100rpx;
  margin-left: 30rpx;
  margin-top: 33rpx;
  display: inline-block;
  color: #a2a6ad;
  font-size: 24rpx;
}

.number .number-operate {
  display: inline-block;
  margin-top: 20rpx;
  /* margin-left: 16rpx; */
  height: 58rpx;
  border: 2rpx solid #f4f4f4;
  border-radius: 2px;
  padding: 0 19rpx;
}

.number .number-operate image {
  height: 24rpx;
  width: 24rpx;
  display: inline-block;
  margin-top: 17rpx;
  vertical-align: top;
}

.number .number-operate input {
  display: inline-block;
  width: 150rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  color: #101010;
  vertical-align: middle;
  font-size: 32rpx;
}

/* 商品详情 */

.product-detail {
  background: #fff;
}

.detail-tab {
  height: 86rpx;
  border-bottom: 1px solid #cacbcd;
}

.detail-tab:before {
  content: ' ';
  position: absolute;
  border-left: 1px solid #cacbcd;
  height: 24rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.detail-tab view {
  width: 100%;
  margin: 0 0;
  padding: 26rpx 0;
  height: 32rpx;
  display: inline-block;
  font-size: 32rpx;
  color: #55595f;
  text-align: center;
}

.detail-tab view.active {
  border-bottom: 2px solid #000;
  color: #000;
}

.detail-info {
  font-size: 32rpx;
  padding-left: 27rpx;
  border-bottom: 1px solid #c2c6ca;
}

.detail-info .param-item {
  border-bottom: 1px solid #c2c6ca;
  overflow: hidden;
}

.detail-info .param-item view {
  display: inline-block;
}

.detail-info .param-item .param-name {
  width: 160rpx;
  margin: 34rpx 52rpx 34rpx 15rpx;
  font-size: 32rpx;
  color: #404245;
}

.detail-image {
  font-size: 32rpx;
  padding: 20rpx 18rpx 20rpx 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-image img {
  flex: 1;
  width: 100%;
}

.detail-info .param-item .param-desc {
  left: 249rpx;
  top: 50%;
  transform: translate(0, -50%);
  color: #55595f;
  font-size: 26rpx;
}

/* 购物车操作 */

.add-cart {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 98rpx;
  width: 100%;
}

.add-cart view {
  float: left;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
}

.add-cart button {
  float: left;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
}

.add-cart .cart {
  width: 20%;
  background: #fff;
}

.add-cart .cart span {
  height: 28rpx;
  width: 28rpx;
  border-radius: 50%;
  background: #f3424c;
  text-align: center;
  line-height: 28rpx;
  top: 20rpx;
  right: 40rpx;
  color: #fff;
  font-size: 20rpx;
}

.add-cart .cart span.add {
  height: 30rpx;
  width: 30rpx;
  font-size: 16rpx;
}

.add-cart .cart image {
  width: 51rpx;
  height: 46rpx;
  margin-top: 25rpx;
}

.add-cart .add {
  width: 40%;
  background-color: #f7f7f7;
  color: #404245;
  font-size: 32rpx;
}

.add-cart .buy-now {
  width: 40%;
  background-color: #404245;
  color: #fff;
  font-size: 32rpx;
}
