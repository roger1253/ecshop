.container {
  padding-bottom: 120rpx;
}

/*轮播*/

.swiper_box {
  height: 750rpx;
  z-index: 9999;
}

swiper.swiper {
  height: 100%;
}

.swiper-item {
  display: block;
  height: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

/* 商品信息 */

.product-info {
  height: 186rpx;
  padding: 19rpx 30rpx 25rpx 30rpx;
  margin-bottom: 14rpx;
  background: #fff;
}

.product-info view {
  width: 690rpx;
  overflow: hidden;
}

.product-info .info {
  height: 92rpx;
  margin-bottom: 16rpx;
  color: #404245;
  font-size: 32rpx;
}

.product-info .info text {
  line-height: 46rpx;
}

.product-info .price {
  height: 46rpx;
}

.product-info .price text {
  display: inline-block;
  margin-right: 10rpx;
}

.product-info .price .now-price {
  color: #292b2d;
  font-size: 42rpx;
}

.product-info .price .old-price {
  color: #74767d;
  font-size: 28rpx;
}

.product-info .price .old-price:before {
  content: ' ';
  width: 100%;
  position: absolute;
  border-top: 1px solid #74767d;
  left: 0;
  top: 48%;
}

/* 促销信息 */

.promo {
  border-radius: 4rpx;
  height: 55rpx;
}

.promo .promo-text {
  background-color: #f3424c;
  color: #fff;
  font-size: 20rpx;
  height: 55rpx;
}

/* 属性选择 */

.product-property {
  margin-bottom: 20rpx;
  overflow: hidden;
  background: #fff;
}

.property {
  padding-right: 20rpx;
  height: auto;
}

.property .property-name {
  display: inline-block;
  width: 110rpx;
  color: #a2a6ad;
  font-size: 24rpx;
}

.property .property-name view {
  width: 60rpx;
  left: 30rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.property .property-name view text {
  line-height: 33rpx;
}

.property .property-values {
  width: 620rpx;
  display: inline-block;
  border-bottom: 1px solid #cacbcd;
  padding-top: 22rpx;
  font-size: 24rpx;
}

.property .property-values .property-value {
  padding: 20rpx;
  border: 1px solid #f4f4f4;
  border-radius: 2px;
  display: inline-block;
  margin-left: 16rpx;
  margin-bottom: 22rpx;
}

.property .property-values .property-value.selected {
  border: 1px solid #f4f4f4;
  color: #fff;
  background-color: #404245;
  border: 1px solid #404245;
}

.property .property-values .property-value.noClick {
  border: 1px solid #f4f4f4;
  color: #fff;
  background-color: #f4f4f4;
  border: 1px solid #f4f4f4;
}

