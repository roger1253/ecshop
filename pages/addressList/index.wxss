
/* 地址列表 */
.address-list{
  background: #FFF;
  border-top: 1rpx solid #EFEFF4;
  margin-bottom: 100rpx;
}
.address-item{
  height: 166rpx;
  border-bottom: 1rpx solid #EFEFF4;
  padding: 30rpx 30rpx 20rpx 30rpx;
}
.address-item view{
  overflow: hidden;
}
.address-item .item-info{
  font-size: 34rpx;
  color: #404245;
  height: 34rpx;
  line-height: 34rpx;
  margin-bottom: 12rpx;
}
.address-item .item-info text{
  margin-right: 16rpx;
}
.address-item .item-detail{
  font-size: 26rpx;
  color: #404245;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.address-item .item-operate icon{
  margin-top: 17rpx;
}
.address-item .item-operate button{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #353535;
  font-size: 26rpx;
  padding: 0;
  /* border-radius: 6rpx; */
}
.address-item .item-operate .delete{
  background: #F8F8F8;
  /* border: 2rpx solid rgba(5,5,5,0.10); */
  margin-right: 20rpx;
}
.address-item .item-operate .edit{
  background: #404245;
  color: #FFF;
}
/* 添加收货地址 */
.add-address{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #FFF;
  background: #404245;
  font-size: 32rpx;
}