


/* 购物车列表 */
.cart-product{
  border-top: 1rpx solid #CACBCD;
  background: #FFFFFF;
  margin-bottom: 100px;
}
.cart-product .cart-item{
  border-bottom: 1rpx solid #CACBCD;
  height: 224rpx;
}
.cart-product .cart-item .select{
  margin: 90rpx 20rpx 0 16rpx;
}
.cart-product .cart-item .select span{
  height: 23px;
  width: 23px;
  background: #FBF9FE;
  border: 1px solid #C9C9C9;
  border-radius: 50%;
}
.cart-product .cart-item .image image{
  width: 176rpx;
  height: 176rpx;
  margin-top: 24rpx;
  margin-right: 20rpx;
}
.cart-product .cart-item .item-info{
  width: 442rpx;
  height: 200rpx;
  overflow: hidden;
  margin-top: 24rpx;
  position: relative;
}
.cart-product .cart-item .item-info .title{
  width: 442rpx;
  color: #353535;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.cart-product .cart-item .item-info .title text{
  line-height: 40rpx;
}
.cart-product .cart-item .item-info .property{
  overflow: hidden;
}
.cart-product .cart-item .item-info .property text{
  font-size: 24rpx;
  float: left;
  color: #888888;
  line-height: 24rpx;
}
.cart-product .cart-item .item-info .property image{
  float: right;
  width: 26rpx;
  height: 28rpx;
  margin-right: 5rpx;
}
.cart-product .cart-item .item-info .price{
  overflow: hidden;
  position: absolute;
  left: 0;
  width: 100%;
  bottom: 20rpx;

}
.cart-product .cart-item .item-info .price text{
  color: #353535;
  font-size: 24rpx;
  line-height: 44rpx;
}
.cart-product .cart-item .item-info .price .amount view{
  height: 44rpx;
  width: 44rpx;
  border: 1rpx solid #E8E8E8;
  border-radius: 50%;
  display: inline-block;
  vertical-align: top;
  box-sizing: border-box;
}
.cart-product .cart-item .item-info .price .amount view image{
  height: 24rpx;
  width: 24rpx;
  margin-top: 9rpx;
  margin-left: 9rpx;
}
.cart-product .cart-item .item-info .amount-number{
  display: inline-block;
  width: 100rpx;
  font-size: 32rpx;
  color: #292B2D;
  text-align: center;
}


/* 去结算 */
.pay{
  background: #FFFFFF;
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #CACBCD;
  border-top: 1rpx solid #CACBCD;
  position: fixed;
  left: 0;
  bottom: 0;
}
.pay view{
  height: 90rpx;
  line-height: 90rpx;
}
.pay .select-all{
  margin-left: 16rpx;
}
.pay .select-all icon{
  margin-top: 18rpx;
}
.pay .select-all text{
  font-size: 28rpx;
  color: #353535;
  margin-right: 20rpx;
  margin-left: 24rpx;
}
.pay .select-all .delete{
  color: #888888;
  margin: 0;
}
.pay .price-all{
  margin-right: 20rpx;
}
.pay .price-all text{
  color: #292B2D;
  font-size: 40rpx;
}
.pay .go-pay{
  text-align: center;
  width: 30%;
  background: #404245;
}
.pay .go-pay text{
  color: #FFFFFF;
  font-size: 32rpx;
}

