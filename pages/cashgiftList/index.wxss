.cashgift{
  padding: 20rpx;
  margin-bottom: 100rpx;
}
.gift-item{
  background: #FFF;
  height: 230rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.gift-num{
  color: #F94444;
  height: 100%;
  font-size: 88rpx;
  margin-top: 32rpx;
  margin-left: 40rpx;
}
.gift-item.unavailable .gift-num{
  color: #B2B2B2;
}
/* .gift-num span{
  font-size: 60rpx;
} */
.gift-num image{
  width: 20rpx;
  height: 32rpx;
  margin-top: 46rpx;
  margin-right: 10rpx;
}
.gift-num .gift-num-status{
  font-size: 26rpx;
  width: 100%;
  color: #B2B2B2;
  /* margin-left: 36rpx; */
  margin-top: 44rpx;
}
.gift-info{
  color: #000;
  height: 100%;
  font-size: 26rpx;
  margin-right: 30rpx;
  margin-top: 32rpx;
}
.gift-info view{
  overflow: hidden;
  margin-bottom: 10rpx;
}
.gift-info.unavailable view{
  color: #B2B2B2;
}
.gift-info .select-icon{
  width: 100%;
  height: 26rpx;
  margin-bottom: 35rpx;
}

.no-gift{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 88rpx;
  width: 100%;
  background: #FFF;
  color: #000;
  font-size: 34rpx;
  text-align: center;
  line-height: 88rpx;
}

.tabbar{
  margin-bottom: 0;
  border-top: 1rpx solid #EFEFF4;
}